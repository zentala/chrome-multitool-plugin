{
  "manifest_version": 2,
  "name": "Zentala Chrome Multitool Plugin",
  "version": "1.0.0",
  "description": "Personal browser extension with custom shortcuts, automations, integrations and productivity tools",

  "permissions": [
    "activeTab",
    "bookmarks",
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "https://allegro.pl/*",
    "https://youtube.com/*",
    "https://fonts.googleapis.com/",
    "https://*.openai.com/*",
    "https://*.anthropic.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Zentala Multitool"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;",
  "content_scripts": [
    {
      "matches": ["https://allegro.pl/*"],
      "js": ["allegroCartPageInjector.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://youtube.com/*"],
      "js": ["youtube.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["globalInjector.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "allegroCartPageInjector.js",
    "globalInjector.js"
  ]
}
