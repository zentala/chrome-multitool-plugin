// Dodaj te dependencje do Twojego package.json w sekcji devDependencies:
//
// "@playwright/test": "^1.40.0",
// "@playwright/test-chrome-extension": "^1.40.0",
//
// I dodaj te skrypty do sekcji scripts:
//
// "test:e2e": "playwright test",
// "test:e2e:headed": "playwright test --headed",
// "test:e2e:debug": "playwright test --debug",
// "test:e2e:ui": "playwright test --ui",
// "test:e2e:currency": "playwright test tests/e2e/currency-converter.spec.ts",
// "test:e2e:allegro": "playwright test tests/e2e/allegro-integration.spec.ts",
// "test:e2e:report": "playwright show-report"

{
  "name": "chrome-multitool-plugin-e2e-setup",
  "version": "1.0.0",
  "description": "Playwright E2E setup for Chrome Extension",
  "scripts": {
    "install:playwright": "pnpm add -D @playwright/test @playwright/test-chrome-extension",
    "install:browsers": "npx playwright install --with-deps",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:currency": "playwright test tests/e2e/currency-converter.spec.ts",
    "test:e2e:allegro": "playwright test tests/e2e/allegro-integration.spec.ts",
    "test:e2e:report": "playwright show-report",
    "test:e2e:coverage": "playwright test --grep-invert 'performance|debug'"
  },
  "playwright": {
    "version": "1.40.0",
    "browsers": ["chromium"]
  }
}
